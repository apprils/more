{
  "name": "@appril/more",
  "version": "0.2.7",
  "description": "Appril More",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": ">=20.10",
    "npm": ">=10.2"
  },
  "files": [
    "pkg/*"
  ],
  "exports": {
    "./fetch": {
      "default": "./pkg/fetch/index.js",
      "types": "./pkg/fetch/index.d.ts"
    },
    "./request": {
      "require": "./pkg/request/index.js",
      "types": "./pkg/request/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./lib",
    "// ✨ types": "",
    "tsc": "tsc --emitDeclarationOnly",
    "// ✨ builders": "",
    "esbuilder": "set -e; func() { e=$1; shift; esbuild lib/$e.ts --outfile=pkg/$e.js --bundle --platform=node --target=node20 --packages=external --sourcemap=inline $*; }; func",
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "set -e; npm run lint; npm run tsc; for e in fetch/index request/index; do npm run esbuilder $e; done"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "follow-redirects": "^1.15.5",
    "form-data": "^4.0.0",
    "qs": "^6.12.0",
    "vue-deepunref": "^1.0.1"
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.5",
    "@biomejs/biome": "^1.5.3",
    "@types/follow-redirects": "^1.14.4",
    "@types/form-data": "^2.5.0",
    "@types/node": "^20.11.25",
    "@types/qs": "^6.9.12",
    "esbuild": "^0.20.1",
    "release-it": "^17.1.1",
    "typescript": "^5.4.2"
  }
}
